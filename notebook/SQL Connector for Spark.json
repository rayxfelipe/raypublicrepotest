					"dbname = \"<< database name >>\"\r\n",
					"url = servername + \";\" + \"databaseName=\" + dbname + \";\"\r\n",
					"dbtable = \"<< table name >> \"\r\n",
					"user = \"<< username >>\" \r\n",
					"principal_client_id = \"<< service principal client id >>\" \r\n",
					"principal_secret = \"<< service principal secret ho>>\"\r\n",
